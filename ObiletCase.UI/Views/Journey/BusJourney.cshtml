@{
    ViewData["Title"] = "Seferler";
}

@using ObiletCase.UI.ViewModels;
@model BusJourneyViewModel
<div class="container-fluid">
    <div class="bg-primary text-white py-4">
        <div class="container">
           <a href="@Url.Action("/Journey/Index")" style="color: white"><i class="fa fa-arrow-left fa-2x"></i></a> <div style="text-align: center"><h3> @Model.OriginLocation - @Model.DestinationLocation<br />"@Model.Date?.ToString("dd.MM.yyyy")"</h3></div>
        </div>
    </div>
    @if (Model.BusJourneys != null && Model.BusJourneys.Count > 0)
    {
        <div class="row">
            @foreach (var item in Model.BusJourneys)
            {
                <div class="col-md-12 mx-auto mt-2">
                    <div class="card card-01">
                        <div class="card-body text-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-left">
                                    <div>
                                        <div style="display: flex;">
                                            <h5 class="card-title text-primary">KALKIŞ
                                                <h5 style="width:50%;" class="card-title text-primary">VARIŞ</h5>
                                        </div>
                                        <div style="display: flex;">
                                            <h5 class="card-title text-primary">@item.Journey.Departure.ToString("HH:mm")
                                                <i class="fa fa-long-arrow-right"></i>
                                                <h5 style="width:40%;" class="card-title text-primary">
                                                    @item.Journey.Arrival.ToString("HH:mm")</h5>
                                        </div>
                                    </div>
                                    <p class="card-text">@item.OriginLocation - @item.DestinationLocation</p>
                                </div>
                                <div class="text-right">
                                    <button style="width:80px;height:40px;" type="button"
                                        class="btn btn-danger">@item.Journey.InternetPrice TL</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Sonuç Bulunamadı!
        </div>
    }
    </div>
